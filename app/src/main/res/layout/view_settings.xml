<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="#00000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/adFrame" android:background="#ff282828" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <View android:background="#eeeeee" android:layout_width="match_parent" android:layout_height="1dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/adFrame">
        <View android:id="@+id/view_settings_portrait_separator" android:background="#eeeeee" android:layout_width="match_parent" android:layout_height="1dp"/>
        <ScrollView android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <include android:id="@+id/settings_view2" layout="@layout/tabview_settings"/>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
